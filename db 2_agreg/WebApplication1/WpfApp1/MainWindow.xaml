<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Margin="10">
            <Button Height="40" Margin="0, 20, 0, 0" Content="Cities" FontSize="20" Name="Items"></Button>
            <Button Height="40" Margin="0, 20, 0, 0" Content="Infos" FontSize="20" Name="Infos"></Button>
            <Button Height="40" Margin="0, 20, 0, 0" Content="Creators" FontSize="20" Name="Creators"></Button>
            <Button Height="40" Margin="0, 20, 0, 0" Content="" FontSize="20" Name="Switch"></Button>
            <Button Height="40" Margin="0, 20, 0, 0" Content="Migration" FontSize="20" Name="Migration"></Button>
        </StackPanel>

        <Border BorderBrush="Black" Grid.Column="1">
            <Frame x:Name="MainFrame"></Frame>
        </Border>
    </Grid>
</Window>
